<?xml version="1.0"?>

 <launch>
 <!-- Creating office world for drone to spawn into in simulation  -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find autonomous_drone)/world/office.world"/>
    
    </include>
<!-- spawning in the drone with its defined specifications  -->
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot" respawn="false" output="screen" 
         args="-urdf -model mydrone -param drone_description" />
<!-- Spawning in and defining all the sensors relative to the drone  -->
    <param name="drone_description" command="$(find xacro)/xacro --inorder 
                                    '/home/arslan/Project/IndividualProject_2020_Arslan-Nazir/catkin_ws/src/autonomous_drone/plugins/DroneAndSensors.urdf.xacro'" />

<!-- Allows a shadow of the drone  -->
    <node pkg="message_to_tf" type="message_to_tf" name="ground_truth_to_tf" output="screen">
     <param name="odometry_topic" value="ground_truth/state" />
     <param name="frame_id" value="nav" />
   </node>
<!-- Allows the drone to spawn in RVIZ correctly  -->
    <node pkg="robot_state_publisher" type="robot_state_publisher"
         name="robot_state_publisher" output="screen">
        <param name="tf_prefix" type="string" value=""/>
        <param name="publish_frequency" type="double" value="50"/>
    </node>
    
 </launch>